<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_books"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/statusBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_toLeftOf="@+id/btn_remove_item"
            android:weightSum="1"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_background"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_account_circle_orange" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="test"
                    android:textColor="#555555"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/txt_item_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="test"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/txt_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:maxLines="2"
                    android:text="test"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_clear"
            android:background="@null"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mt_gray6"/>

</android.support.v7.widget.CardView>