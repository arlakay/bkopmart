<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.octolink.ilm.bkopmart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.cart.CartActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.forgotpassword.ForgotPasswordActivity" />
        <activity
            android:name=".ui.transaction.DetilTransaksiActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.home.DetilProductActivity"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity android:name=".ui.favorite.DetilFavoriteActivity"></activity>
    </application>

</manifest>